MyList = []
for Index in range(7):
    MyList.append(int(input("Enter a number: ")))
MaxIndex = 6
SearchValue = int(input("Enter a search value: "))
Found = False
Index = -1               #always start list at -1

while not Found and Index < MaxIndex:
    Index += 1
    if MyList[Index] == SearchValue:
        Found = True

if Found == True:
    print("Value found at: ", Index + 1)
else:
    print("Value not found")

for Index in range(7):
    print(Index, " ", MyList[Index])
